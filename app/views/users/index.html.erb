<%= render '/list', user: @user, book: @book %>

    <div class='col-md-8 offset-md-1'>
      
      <h2>Books</h2>
      
      <table class='table table-hover table-inverse'>
        
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40'%></th>
              <th><%= user.name %></th>
              <th><%= link_to "Show", user_path(user.id) %></th>
            </tr>
          <% end %>
        </tbody>
        
      </table>
        
    </div>
<!----⬇️部分テンプレートの分>-->
  </div>
</div>

<%= paginate @books %>
